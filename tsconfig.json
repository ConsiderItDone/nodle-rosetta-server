{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "paths": {
      "types": [
        "src/types"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "ESNext"
    ],
    "types": ["node"],
  },
  "include": [
    "*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}